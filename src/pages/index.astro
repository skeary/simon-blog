---
import BaseHead from '../components/Head/BaseHead.astro';
import Nav from '../components/Nav.astro';
import HomeHeader from '../components/HomeHeader.astro';
import Card from '../components/Card.astro';
import Footer from '../components/Footer/Footer.astro'
import { ArticleFrontMatter } from '../types/ArticleFrontMatter';


let title = 'Simon Keary';
let description = 'Personal programming blog + random thoughts/experiments';
let seoDescription = 'Simon Keary | Personal Blog';

let allPosts = await Astro.glob<ArticleFrontMatter>('./posts/*.md');
allPosts = allPosts.sort((a, b) => new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf());
---

<html lang="en">
  <head>
    <BaseHead title={title} description={seoDescription} />
  </head>

  <body class="bg-white text-black font-body leading-normal personality-casual">
    <Nav />

    <main class="py-12 lg:py-20">
      <article class="max-w-6xl mx-auto px-3">
        <HomeHeader title={title} description={description} />
        <section class="mt-12 leading-loose max-w-md mx-auto grid gap-4">
          <p>Hi, I'm Simon. I'm a Software Engineer and for the last 20(!) years I've had roles ranging from Senior Engineer to Technical Lead to Software Department Manager.
           </p>
           <p>
           Things I love:
           </p>
           <ul>

            <li>👨‍💻  Node.js/React/TypeScript + backend cloud technologies/tools (Docker, Linux, AWS, SQL/NoSQL databases)</li>
            <li>🤔  Learning about frontend and backend tech</li>
            <li>🧰 Programming and making quality things, in general</li>
            <li>🚴‍♂️ Music, cycling, not driving</li>

            </ul>
        </section>
        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 py-8" data-test="articles-section">
          {allPosts.map(p => <div class="col-span-1"><Card frontmatter={p.frontmatter} url={p.url} /></div>)}
        </section>
      </article>
    </main>
    <Footer />
  </body>
</html>
